<!DOCTYPE html>
<!--{% block top %} -->
<html lang="{{request.locale_name}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Pylons Project">
    <link rel="shortcut icon" href="{{request.static_url('jinventory:static/pyramid-16x16.png')}}">

    <title>Starter Scaffold for The Pyramid Web Framework</title>

    <!-- Bootstrap core CSS -->
    <link href="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="{{request.static_url('jinventory:static/theme.css')}}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    {% block cssstyle %}
    <style>

      IMG.displayed {
    display: block;
     margin-top: 50px;
    margin-left: auto;
    margin-right: auto }

  </style>
{% endblock cssstyle %}

  </head>

  <body>
      
      
        <img class="displayed" src="{{request.static_url('jinventory:static/cdot.png')}}" alt="CDOT" style="text-align:center" width="120" height="150">
      
    <div class="starter-template">
      
      
      <div class="container">
        <div class="row">
          <div class="col-md-2">
            <img class="logo img-responsive" src="{{request.static_url('jinventory:static/pyramid.png')}}" alt="pyramid web framework">
          </div>
          <div class="col-md-10">
            <div class="content"> <!-- {% endblock top %} -->

		 {% block welcome %}
              <h1><span class="font-semi-bold">{{company[0]}}</span> <span class="smaller">Laptops Inventory</span></h1> {% endblock welcome %} 

		{% block rest %}
              <p class="lead">Welcome to <span class="font-normal">{{project[0]}}</span>, an&nbsp;application&nbsp;to search and request for laptops<br>by <span class="font-normal">Anirban Roy Das</span>.</p>
            </div>
          </div>
        </div>
	{% endblock rest %}
        
      <!--  {% block bottom %} -->
        <div class="grouptype" align="center">
        
              <h1 class="center"><span class="lead">Group</span></h1>
            
          <form action="{{request.route_url('laptops')}}" method="POST">
            <select name="group" id="Group" align="center">
              <option value="--"> -- </option>
              <option value="satwl">SatWl</option>
              <option value="modem">Modem</option>
            </select><br><br>
            <input type="submit" align="center" name="form.select" value="Select">
          </form>
        </div>

        <div class="row">
          <div class="links">
            <ul>
              <li class="current-version">Generated by Pyramid v1.5.2</li>
              <li><i class="glyphicon glyphicon-bookmark icon-muted"></i><a href="http://docs.pylonsproject.org/projects/pyramid/en/1.5-branch/">Docs</a></li>
              <li><i class="glyphicon glyphicon-cog icon-muted"></i><a href="https://github.com/Pylons/pyramid">Github Project</a></li>
              <li><i class="glyphicon glyphicon-globe icon-muted"></i><a href="irc://irc.freenode.net#pyramid">IRC Channel</a></li>
              <li><i class="glyphicon glyphicon-home icon-muted"></i><a href="http://pylonsproject.org">Pylons Project</a></li>
          </div>
        </div>
        <div class="row">
          <div class="copyright">
            Copyright &copy; 2015 CDOT All Rights Reserved
          </div>
        </div>
      </div>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html> <!-- {% endblock bottom %} -->
